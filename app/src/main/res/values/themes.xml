<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Todoister" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>  <item name="colorPrimaryVariant">@color/purple_700</item>  <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>  <item name="colorSecondaryVariant">@color/teal_700</item>  <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Todoister.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Todoister.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>  <item name="colorSecondary">@color/dark_secondary_color</item>
        <item name="colorSecondaryVariant">@color/dark_secondary_variant_color</item>
        <item name="colorOnSecondary">@color/white</item>  <item name="editTextColor">@color/white</item>    </style>

    <style name="Theme.Todoister.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Todoister.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CustomCalendarView" parent="Widget.Material3.MaterialCalendar">
        <item name="android:background">@color/dark_background_color</item>
    </style>


</resources>